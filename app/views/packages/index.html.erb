<h1>Listing packages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.productid %></td>
        <td><%= package.productndc %></td>
        <td><%= package.ndcpackagecode %></td>
        <td><%= package.packagedescription %></td>
        <td><%= link_to 'Show', package_path(package) %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @packages , :theme => 'twitter-bootstrap' %>
<br>

<%= link_to 'New Package', new_package_path %>
